model Article {
  id             BigInt       @id @default(autoincrement()) @db.UnsignedBigInt
  rssPublisher   RssPublisher @relation(fields: [rssPublisherId], references: [id], map: "fk_article_rss_publisher_id", onDelete: Cascade, onUpdate: Cascade)
  rssPublisherId BigInt       @map("rss_publisher_id") @db.UnsignedBigInt
  title          String       @db.VarChar(255)
  link           String       @unique(map: "uq_article_link") @db.VarChar(255)
  author         String       @db.VarChar(255)
  summary        String?      @db.LongText
  publishedAt    DateTime     @map("published_at") @db.DateTime()
  createdAt      DateTime     @default(now()) @map("created_at") @db.DateTime()
  updatedAt      DateTime     @default(now()) @updatedAt @map("updated_at") @db.DateTime()

  @@map("article")
}
