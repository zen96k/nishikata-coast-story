{
  "name": "ncs-web",
  "type": "module",
  "scripts": {
    "postinstall": "npm run nuxt:postinstall",
    "ncs:dev": "npm run nuxt:dev",
    "ncs:prod": "node .output/server/index.mjs",
    "ncs:up": "dotenvx run -f compose.${NCS_ENV}.env -- docker compose -f compose.${NCS_ENV}.yml up -d --pull always --force-recreate -V --wait",
    "ncs:down": "dotenvx run -f compose.${NCS_ENV}.env -- docker compose -f compose.${NCS_ENV}.yml down",
    "dotenvx:decrypt": "dotenvx decrypt -f *.env",
    "dotenvx:encrypt": "dotenvx encrypt -f *.env",
    "eslint": "eslint",
    "nuxt:build": "dotenvx run -f nuxt.${NCS_ENV}.env -- nuxt build",
    "nuxt:dev": "dotenvx run -f nuxt.dev.env -- nuxt dev --no-fork",
    "nuxt:generate": "nuxt generate",
    "nuxt:preview": "nuxt preview",
    "nuxt:postinstall": "nuxt prepare",
    "tsc:check": "tsc --noEmit",
    "knip": "knip",
    "ncu": "ncu",
    "ncu:upgrade": "ncu -u && npm install"
  },
  "engines": {
    "node": "24.11.1",
    "npm": "11.6.2"
  },
  "dependencies": {
    "nuxt": "4.2.1",
    "vue": "3.5.24",
    "vue-router": "4.6.3"
  },
  "devDependencies": {
    "@nuxt/eslint": "1.10.0",
    "@nuxt/ui": "4.1.0",
    "@tsconfig/recommended": "1.0.11",
    "@types/luxon": "3.7.1",
    "@vueuse/core": "14.0.0",
    "@vueuse/nuxt": "14.0.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "knip": "5.68.0",
    "luxon": "3.7.2",
    "npm-check-updates": "19.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.1",
    "superjson": "2.2.5",
    "typescript": "5.9.3",
    "vue-tsc": "3.1.3",
    "zod": "4.1.12"
  }
}
