{
  "name": "nishikata-coast-story",
  "image": "debian",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": false,
      "mobyBuildxVersion": "latest",
      "dockerDashComposeVersion": "v2",
      "azureDnsAutoDetection": true,
      "dockerDefaultAddressPool": "",
      "installDockerBuildx": true,
      "installDockerComposeSwitch": true,
      "disableIp6tables": false
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "latest",
      "golangciLintVersion": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22.21.1",
      "nodeGypDependencies": true,
      "nvmInstallPath": "/usr/local/share/nvm",
      "pnpmVersion": "latest",
      "nvmVersion": "latest",
      "installYarnUsingApt": true
    }
  },
  "init": true,
  "runArgs": ["--env-file", ".devcontainer/devcontainer.env", "--rm"],
  "forwardPorts": [3000, 3001, 5306, 5555],
  "customizations": {
    "vscode": {
      "extensions": [
        "bradlc.vscode-tailwindcss",
        "Codeium.codeium",
        "Continue.continue",
        "dbaeumer.vscode-eslint",
        "dotenv.dotenvx-vscode",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "MS-CEINTL.vscode-language-pack-ja",
        "ms-vscode.cpptools-themes",
        "Nuxtr.nuxtr-vscode",
        "Prisma.prisma",
        "ReneSaarsoo.sql-formatter-vsc",
        "vscode-icons-team.vscode-icons",
        "vitest.explorer",
        "Vue.volar"
      ]
    }
  },
  "onCreateCommand": "bash -i .devcontainer/script/on_create_command.sh",
  "postStartCommand": "bash -i .devcontainer/script/post_start_command.sh",
  "postAttachCommand": "bash -i .devcontainer/script/post_attach_command.sh",
  "waitFor": "onCreateCommand"
}
