{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "API Server",
      "preLaunchTask": "npm: install - backend/api",
      "cwd": "${workspaceFolder}/backend/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "ncs:dev"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Batch Server",
      "preLaunchTask": "npm: install - backend/batch",
      "cwd": "${workspaceFolder}/backend/batch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "ncs:dev"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "DB Server",
      "preLaunchTask": "npm: install - backend/db",
      "cwd": "${workspaceFolder}/backend/db",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "prisma:studio"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Web Server",
      "preLaunchTask": "npm: install - frontend/web",
      "cwd": "${workspaceFolder}/frontend/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "ncs:dev"],
      "outputCapture": "std"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Web Client",
      "preLaunchTask": "wait-for-backend-server",
      "runtimeArgs": [
        "--incognito",
        "--auto-open-devtools-for-tabs",
        "http://localhost:3000",
        "http://localhost:5555"
      ],
      "webRoot": "${workspaceFolder}/frontend/web/app"
    }
  ],
  "compounds": [
    {
      "name": "Fullstack Mode",
      "configurations": [
        "API Server",
        "Batch Server",
        "DB Server",
        "Web Server",
        "Web Client"
      ]
    }
  ]
}
