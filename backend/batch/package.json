{
  "name": "ncs-batch",
  "type": "module",
  "scripts": {
    "ncs:dev": "npm run prisma:generate && npm run tsx:dev",
    "ncs:test": "docker compose -f compose.test.yml --env-file compose.test.env up -d --pull always && docker container exec -it node-test bash -c 'npm install && NCS_ENV=test npm run prisma:db:push && npm run vitest' && docker compose -f compose.test.yml --env-file compose.test.env down",
    "prisma:db:push": "dotenv -e prisma.${NCS_ENV}.env -- prisma db push",
    "prisma:generate": "prisma generate",
    "tsx:dev": "tsx watch --env-file prisma.dev.env app/main.ts",
    "vitest": "dotenv -e prisma.test.env -- vitest run --coverage",
    "ncu": "ncu",
    "ncu:upgrade": "ncu --upgrade && npm install",
    "knip": "knip"
  },
  "prisma": {
    "schema": "prisma"
  },
  "dependencies": {
    "node-cron": "4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@prisma/client": "6.17.1",
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/recommended": "1.0.10",
    "@types/luxon": "3.7.1",
    "@types/node": "24.7.1",
    "@vitest/coverage-v8": "3.2.4",
    "dotenv-cli": "10.0.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "knip": "5.64.3",
    "luxon": "3.7.2",
    "npm-check-updates": "19.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prisma": "6.17.1",
    "rss-parser": "3.13.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0",
    "vitest": "3.2.4"
  }
}
