{
  "name": "ncs-batch",
  "type": "module",
  "scripts": {
    "ncs:dev": "npm install && npm run prisma:generate && npm run tsx:dev",
    "tsx:dev": "tsx watch --env-file prisma.dev.env app/main.ts",
    "vitest": "vitest run",
    "prisma:generate": "dotenv -e prisma.${NCS_ENV}.env -- prisma generate",
    "ncu": "ncu",
    "ncu:upgrade": "ncu --upgrade && npm install",
    "knip": "knip"
  },
  "prisma": {
    "schema": "prisma"
  },
  "dependencies": {
    "node-cron": "4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@prisma/client": "6.16.3",
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/recommended": "1.0.10",
    "@types/luxon": "3.7.1",
    "@types/node": "24.7.0",
    "dotenv-cli": "10.0.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "knip": "5.64.2",
    "luxon": "3.7.2",
    "npm-check-updates": "19.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prisma": "6.16.3",
    "rss-parser": "3.13.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0",
    "vitest": "3.2.4"
  }
}
