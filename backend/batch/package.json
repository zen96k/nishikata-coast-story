{
  "name": "ncs-batch",
  "type": "module",
  "scripts": {
    "ncs:dev": "npm run prisma:generate && npm run tsx:dev",
    "ncs:qc": "dotenvx run -f compose.qc.env -- docker compose -f compose.qc.yml up -d --pull always --force-recreate -V --wait && NCS_ENV=qc npm run prisma:db:push && npm run vitest",
    "ncs:up": "docker compose -f compose.${NCS_ENV}.yml up -d --pull always --force-recreate -V --wait",
    "ncs:down": "docker compose -f compose.${NCS_ENV}.yml down",
    "dotenvx:decrypt": "dotenvx decrypt -f *.env",
    "dotenvx:encrypt": "dotenvx encrypt -f *.env",
    "eslint": "eslint",
    "prisma:db:push": "dotenvx run -f prisma.${NCS_ENV}.env -- prisma db push",
    "prisma:generate": "prisma generate",
    "tsc:check": "tsc --noEmit",
    "tsx:dev": "dotenvx run -f prisma.dev.env -- tsx watch app/main.ts",
    "tsx:prod": "dotenvx run -f prisma.prod.env -- tsx app/main.ts",
    "vitest": "dotenvx run -f prisma.qc.env -- vitest run --coverage",
    "knip": "knip",
    "ncu": "ncu",
    "ncu:upgrade": "ncu -u && npm install"
  },
  "prisma": {
    "schema": "prisma"
  },
  "dependencies": {
    "node-cron": "4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@prisma/client": "6.19.0",
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/recommended": "1.0.11",
    "@types/luxon": "3.7.1",
    "@types/node": "24.10.0",
    "@vitest/coverage-v8": "4.0.8",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "knip": "5.68.0",
    "luxon": "3.7.2",
    "npm-check-updates": "19.1.2",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prisma": "6.19.0",
    "rss-parser": "3.13.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3",
    "vitest": "4.0.8"
  }
}
