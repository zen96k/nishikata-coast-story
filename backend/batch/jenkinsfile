pipeline {
    agent any

    tools {
        nodejs "node:22"
    }

    stages {
        stage('test') {
            steps {
                script {
                    def DOTENV_PRIVATE_KEY_ENV = credentials("DOTENV_PRIVATE_KEY")
                    sh "cd backend/batch && npm clean-install && env DOTENV_PRIVATE_KEY_ENV=${DOTENV_PRIVATE_KEY_ENV} npm run ncs:test"
                }
            }
        }
    }
}
