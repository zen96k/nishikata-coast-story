pipeline {
    agent any

    tools {
        nodejs "node:22"
    }

    stages {
        stage('test') {
            steps {
                script {
                    // 1. Get the credential value
                    def DOTENV_PRIVATE_KEY_ENV = credentials("DOTENV_PRIVATE_KEY")

                    // 2. Execute the shell command, correctly interpolating the Groovy variable
                    //    I recommend adding single quotes around the interpolated variable for safety.
                    sh "cd backend/batch && npm clean-install && env DOTENV_PRIVATE_KEY_ENV='${DOTENV_PRIVATE_KEY_ENV}' npm run ncs:test"
                }
            }
        }
    }
}
