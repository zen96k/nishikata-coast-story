{
  "name": "ncs-api",
  "type": "module",
  "scripts": {
    "ncs:dev": "npm run prisma:generate && npm run tsx:dev",
    "ncs:qc": "dotenvx run -f compose.qc.env -- docker compose -f compose.qc.yml up -d --pull always --force-recreate -V --wait && NCS_ENV=qc npm run prisma:db:push && npm run vitest",
    "prisma:generate": "prisma generate",
    "tsx:dev": "dotenvx run -f hono.dev.env prisma.dev.env -- tsx watch app/main.ts",
    "vitest": "dotenvx run -f prisma.qc.env -- vitest run --coverage",
    "ncu": "ncu",
    "ncu:upgrade": "ncu -u && npm install",
    "knip": "knip"
  },
  "prisma": {
    "schema": "prisma"
  },
  "dependencies": {
    "@hono/node-server": "1.19.5",
    "hono": "4.10.3"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@prisma/client": "6.18.0",
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/recommended": "1.0.10",
    "@types/luxon": "3.7.1",
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "4.0.3",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "h3": "2.0.1-rc.4",
    "knip": "5.66.2",
    "luxon": "3.7.2",
    "npm-check-updates": "19.1.1",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prisma": "6.18.0",
    "rss-parser": "3.13.0",
    "superjson": "2.2.3",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vitest": "4.0.3",
    "zod": "4.1.12"
  }
}
