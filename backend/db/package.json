{
  "name": "ncs-db",
  "type": "module",
  "scripts": {
    "dev": "docker compose -f compose.dev.yml --env-file compose.dev.env up -d --force-recreate --remove-orphans",
    "backup": "mkdir -p backup && docker container exec ncs-mariadb sh -c 'mariadb-dump --all-databases -u root -p\"${MARIADB_ROOT_PASSWORD}\"' > backup/$(date +%Y%m%d%H%M%S).sql",
    "restore": "docker container exec ncs-mariadb sh -c 'mariadb -u root -p\"${MARIADB_ROOT_PASSWORD}\"' <",
    "generate": "dotenv -e prisma.${NCS_ENV}.env -- prisma generate",
    "db:pull": "dotenv -e prisma.${NCS_ENV}.env -- prisma db pull",
    "db:push": "dotenv -e prisma.${NCS_ENV}.env -- prisma db push",
    "migrate:dev": "dotenv -e prisma.dev.env -- prisma migrate dev",
    "migrate:reset": "dotenv -e prisma.dev.env -- prisma migrate reset",
    "studio": "prisma studio"
  },
  "prisma": {
    "schema": "prisma"
  },
  "dependencies": {
    "@prisma/client": "6.16.2",
    "prisma": "6.16.2"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/recommended": "1.0.10",
    "@types/node": "24.5.2",
    "dotenv-cli": "10.0.0",
    "tsx": "4.20.6",
    "typescript": "5.9.2"
  }
}
