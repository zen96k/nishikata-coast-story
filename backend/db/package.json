{
  "name": "ncs-db",
  "type": "module",
  "scripts": {
    "mariadb:up": "docker compose -f compose.${NCS_ENV}.yml --env-file compose.${NCS_ENV}.env up -d --pull always",
    "mariadb:backup": "mkdir -p backup && docker container exec mariadb-${NCS_ENV} sh -c 'mariadb-dump --all-databases -u root -p${MARIADB_ROOT_PASSWORD}' > backup/${NCS_ENV}-$(date +%Y%m%d%H%M%S).sql",
    "mariadb:restore": "docker container exec mariadb-${NCS_ENV} sh -c 'mariadb -u root -p${MARIADB_ROOT_PASSWORD}' <",
    "prisma:generate": "prisma generate",
    "prisma:db:pull": "dotenv -e prisma.${NCS_ENV}.env -- prisma db pull",
    "prisma:db:push": "dotenv -e prisma.${NCS_ENV}.env -- prisma db push",
    "prisma:db:seed": "dotenv -e prisma.${NCS_ENV}.env -- prisma db seed",
    "prisma:migrate:dev": "dotenv -e prisma.dev.env -- prisma migrate dev",
    "prisma:migrate:reset": "dotenv -e prisma.dev.env -- prisma migrate reset",
    "prisma:studio": "prisma studio",
    "ncu": "ncu",
    "ncu:upgrade": "ncu --upgrade && npm install",
    "knip": "knip"
  },
  "prisma": {
    "schema": "prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "6.17.0",
    "prisma": "6.17.0"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/recommended": "1.0.10",
    "@types/node": "24.7.0",
    "dotenv-cli": "10.0.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "knip": "5.64.2",
    "npm-check-updates": "19.0.0",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0"
  }
}
