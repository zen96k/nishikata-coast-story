{
  "name": "ncs-db",
  "type": "module",
  "scripts": {
    "dev": "docker compose -f compose.dev.yml --env-file compose.dev.env up -d",
    "backup": "docker container exec ncs-mariadb sh -c 'mariadb-dump --all-databases -u root -p\"${MARIADB_ROOT_PASSWORD}\"' > backup/$(date +%Y%m%d%H%M%S).sql",
    "restore": "docker container exec ncs-mariadb sh -c 'mariadb -u root -p\"${MARIADB_ROOT_PASSWORD}\"' <",
    "db:pull": "prisma db pull",
    "db:push": "prisma db push",
    "generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "studio": "prisma studio"
  },
  "prisma": {
    "schema": "./prisma"
  },
  "dependencies": {
    "@prisma/client": "6.16.1",
    "prisma": "6.16.1"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "22.0.2",
    "@tsconfig/node-ts": "23.6.1",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "24.4.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
