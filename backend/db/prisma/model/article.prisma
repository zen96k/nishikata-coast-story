model Article {
  id                 BigInt    @id @default(autoincrement()) @db.UnsignedBigInt
  publisher          Publisher
  publisherArticleId String    @map("publisher_article_id") @db.VarChar(255)
  title              String    @db.VarChar(255)
  link               String    @db.VarChar(255)
  author             String    @db.VarChar(255)
  summary            String?   @db.LongText
  published          DateTime  @db.DateTime()
  updated            DateTime  @db.DateTime()
  createdAt          DateTime  @default(now()) @map("created_at") @db.DateTime()
  updatedAt          DateTime  @updatedAt @map("updated_at") @db.DateTime()

  @@unique(fields: [publisher, publisherArticleId], name: "uq_article_publisher_publisher_article_id")
  @@map("article")
}

enum Publisher {
  Qiita
  Zenn
}
